<!-- top bar -->
<div class="top-bar top-info">
  <span>yes, we ship internationally!</span>
</div>

<!-- Small Navigation -->
<div class="title-bar" data-responsive-toggle="nav-menu" data-hide-for="medium">
  <span><strong>sub</strong>kitchen</span>
  <button class="menu-icon" type="button" data-toggle></button>
  <ul class="vertical medium-horizontal menu" data-dropdown-menu>
    <li> <a> <span class="icon-sub-heart"></span> </a> </li>
    <li> <a> <span class="icon-sub-basket"></span> </a> </li>
  </ul>
</div>

<!-- Medium-Up Navigation -->
<nav class="top-bar" id="nav-menu">
  <ul class="vertical medium-horizontal menu">
    <li>
      {{#link-to 'index' class="logo"}}
        <img src="assets/images/logo.png" alt="">
        <span class="name"><strong>sub</strong>kitchen</span>
      {{/link-to}}
    </li>
    <li> {{#link-to 'products' class="menu-item uppercase"}} shop {{/link-to}} </li>
    <li> {{#link-to 'cooking' (query-params product_id="" selected_template_id="") class="menu-item uppercase"}} create {{/link-to}} </li>
    <li><a class="menu-item" href="#">sell</a></li>
    <li><a class="menu-item" href="#">artists</a></li>
    <li class="divider"></li>
    <li class="search-form">
      <input class="search" type="text" placeholder="SEARCH">
      <span class="icon-sub-search"></span>
    </li>
    <li class="divider"></li>
    <li>
      {{#if session.isAuthenticated}}
      <ul class="dropdown menu" data-dropdown-menu>
        <li>
          {{#link-to 'profile' class="join uppercase"}}
            <span class="uppercase">my&nbsp;kitchen</span>
          {{/link-to}}
          <ul class="menu">
            <li>
              {{#link-to 'profile' class="uppercase"}}profile{{/link-to}}
            </li>
            <li>
              <a class="uppercase" onclick={{action 'invalidateSession'}}>
                logout
              </a>
            </li>
          </ul>
        </li>
      </ul>
      {{else}}
      <a class="join" onclick={{action 'showLogin'}}>
        <span>join/login</span>
      </a>
      {{/if}}
    </li>
    <li> <a class="action-item"> <span class="icon-sub-heart"></span> </a> </li>

    <li data-toggle="cart-dropdown" id="cart-dropdown-trigger">
      <a class="action-item basket-indicator" onclick={{action 'showCart'}}> <span class="icon-sub-basket"></span>
        <span class="basket-counter">{{cartCount}}</span>
      </a>

      <div class="dropdown-pane bottom" id="cart-dropdown" data-dropdown data-hover="true" data-auto-focus="true" data-close-on-click="true">
        <h5 class="uppercase font-bold text-center">your cart</h5>

        {{#if hasData}}
        <ul class="vertical menu">
          {{#each cart.order.data.items as |item|}}
          <li>
            <div class="row collapse" >
              <div class="small-8 columns text-left">
                <div class="row collapse">
                  <div class="small-12 columns ellipsis name">
                    <small>{{item.name}}</small>
                  </div>
                </div>
                <div class="row collapse">
                  <div class="small-12 columns size">
                    <small>QTY: {{item.quantity}} {{item.size}}</small>
                  </div>
                </div>
              </div>
              <div class="small-4 columns text-right">
                <div class="row collapse">
                  <div class="small-12 columns price">
                    <small>{{format-number item.price style="currency" currency="USD"}}</small>
                  </div>
                </div>
              </div>
            </div>
          </li>
          {{/each}}
        </ul>
        {{else}}
        <div class="row items">
          <div class="small-12 columns uppercase center">
            is empty
          </div>
        </div>
        {{/if}}

        <div class="row total">
          <div class="small-12 columns text-center">
            <small><strong>Total:</strong> {{format-number cart.order.data.total_cost style="currency" currency="USD"}}</small>
          </div>
        </div>
        <div class="row">
          <div class="small-12 columns">
            <div class="button blue" onclick={{action 'showCart'}}>Edit cart/Checkout</div>
          </div>
        </div>
      </div>
    </li>

  </ul>
</nav>


<div class="reveal" id="loginModal" data-reveal data-close-on-click="true">
  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
  <div class="row white">
    <div class="small-12 columns">
      <div class="row">
        <div class="small-12 columns centered">
          <img src="assets/images/account-login.svg" alt="">
        </div>
      </div>
      <div class="row">
        <div class="small-12 columns">
          {{#if errorMessage}}
          <div class="callout alert center">
            <h5 class="font-bold">LOGIN FAILED</h5>
          </div>
          {{/if}}
          <form novalidate {{action "authenticate" on="submit"}}>
            <div class="row">
              <div class="small-12 columns">
                <label>E-mail
                  {{input  type="email" name="email" value=identification placeholder="Your e-mail address" aria-describedby="Your e-mail address" required=true pattern="email"}}
                </label>
              </div>
              <div class="small-12 columns">
                <label>Password
                  <span class="float-right font-light">
                    <a onclick={{action 'showPasswordReminder'}}>Oh no! I forgot!</a>
                  </span>
                  {{input  type="password" name="password" value=password placeholder="Your password" aria-describedby="Your password" required=true}}
                </label>
              </div>
            </div>
            <div class="row">
              <div class="small-12 columns">
                <button class="button dark" type="submit" value="login">LOGIN</button>
                <span class="font-light middle" data-equalizer-watch>or</span>
                <a onclick={{action 'createAccount'}} class="font-bold middle" data-equalizer-watch>CREATE ACCOUNT</a>
              </div>
            </div>
          </form>
          <div class="row">
            <div class="small-12 columns center">
              {{facebook-login}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="reveal" id="passwordReminderModal" data-reveal data-close-on-click="true">
  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
  <div class="row white">
    <div class="small-12 columns">
      <div class="row">
        <div class="small-12 columns">
          {{#if errorMessage}}
          <div class="callout alert center">
            <h5 class="font-bold">UNKNOWN OR INVALID EMAIL</h5>
          </div>
          {{/if}}
          {{#if mailSent}}
          <div class="callout success center">
            <h5 class="font-bold">WE SENT EMAIL, PLEASE CHECK YOUR MAILBOX</h5>
          </div>
          {{/if}}
          <form novalidate {{action "remindPassword" on="submit"}}>
            <div class="row">
              <div class="small-12 columns">
                <label>E-mail
                  {{input  type="email" name="email" autocomplete="off" value=identification placeholder="Your e-mail address" aria-describedby="Your e-mail address" required=true pattern="email"}}
                </label>
              </div>
            </div>
            <div class="row">
              <div class="small-12 columns">
                <button class="button dark" type="submit" value="login">REMIND ME PASSWORD</button>
                <span class="font-light middle" data-equalizer-watch>or</span>
                <a onclick={{action 'showLogin'}} class="font-bold middle" data-equalizer-watch>LOGIN</a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

