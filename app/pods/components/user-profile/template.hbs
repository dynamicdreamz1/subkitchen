<h5 class="font-black">My Profile</h5>
<div class="row profile">
  <div class="small-12 columns">

    <div class="row">
      <div class="small-12 medium-3 large-2 columns">
        {{#if user.imageUrl}}
        <img src="{{user.imageUrl}}" alt="">
        {{else}}
        <img src="assets/images/default.png" alt="">
        {{/if}}
      </div>
      <div class="small-12 medium-9 large-10 columns">
        <h5 class="font-black uppercase">{{user.name}}</h5>
        <p>{{user.email}}</p>
        <p>
          <form id="formAvatarUpload">
            <label id="uploadButton" for="avatarFileUpload" class="button hollow upload">upload</label>
            {{input type="file" name="image" id="avatarFileUpload" class="show-for-sr" value=user.profileImage}}

            {{input-errors errors=errors.profile_image}}
          </form>
        </p>
      </div>
    </div>

    <hr>

    <div class="row">
      <div class="small-12 medium-7 columns">
        {{input-data-errors errors=user.errors.base}}
        <form novalidate  {{action "save" on="submit"}}>
          <div class="row">
            <div class="small-12 columns">
              <label class={{if user.errors.name "is-invalid-label" ""}}>Profile name
                {{input type="text" placeholder="eg, John Doe" value=user.name id="user-name"}}
                {{input-data-errors errors=user.errors.name}}
              </label>
            </div>
            <div class="small-12 columns">
              <label class={{if user.errors.email "is-invalid-label" ""}}>Email Address
                {{input type="email" placeholder="Email Address" value=user.email id="user-email"}}
                {{input-data-errors errors=user.errors.email}}
              </label>
            </div>
            <div class="small-12 columns">
              <label class={{if user.errors.handle "is-invalid-label" ""}}>Handle
                <div class="input-group">
                  <span class="input-group-label">http://sublimation.kitchen/</span>
                  {{input class="input-group-field" type="text" placeholder="johndoe" value=user.handle id="user-handle"}}
                </div>
                {{input-data-errors errors=user.errors.handle}}
              </label>
            </div>
            <div class="small-12 columns">
              <label class={{if user.errors.bio "is-invalid-label" ""}}>BIO
                {{textarea value=user.bio id="user-bio" rows="5" placeholder="About you"}}
                {{input-data-errors errors=user.errors.bio}}
              </label>
            </div>
          </div>
          <div class="row">
            <div class="small-12 columns text-right">
              <button class="button uppercase" id="save-button">save</button>
            </div>
          </div>
        </form>
      </div>
      <div class="small-12 medium-5 columns">
        <span class="font-bold">Deafault Address</span>
        <p>
          <small>
            {{#if showAddress}}
              {{address.firstName}} {{address.lastName}}
              {{#if address.address}}
                <br>
                {{address.address}}
              {{/if}}
              {{#if (or address.zip address.region)}}
                <br>
                {{address.zip}} {{address.region}}
              {{/if}}
              {{#if address.city}}
                <br>
                {{address.city}}
              {{/if}}
              {{#if address.country}}
                <br>
                {{address.country}}
              {{/if}}
            {{else}}
              Add your default address, so you will not have to type it everytime you place an order.
            {{/if}}
          </small>
        </p>
            {{#if showAddress}}
              {{#link-to 'profile-address' class="button dark uppercase"}}edit address{{/link-to}}
            {{else}}
              {{#link-to 'profile-address' class="button dark uppercase"}}add address{{/link-to}}
            {{/if}}
      </div>
    </div>

    {{#if user.artist}}
      {{#if (eq user.status 'unverified')}}
        <div class="row font-bold become-a-cook">
          <div class="small-12 columns center">
            <h2 class="font-black uppercase">We are waiting for payment confirmation!</h2>
            <p>
              <button class="button dark uppercase" onclick={{action 'becomeCook'}}>Confirm one more time</button>
            </p>
          </div>
        </div>
      {{/if}}
    {{else}}
      <div class="row font-bold become-a-cook">
        <div class="small-12 columns center">
          <h2 class="font-black uppercase">become a cook!</h2>
          <p class="font-bold">Create your own Artist Profile and start cooking today!</p>
          <p>
            <button class="button dark uppercase" onclick={{action 'becomeCook'}}>start here</button>
            <span class="uppercase or"> or </span>
            <button class="button dark uppercase">read more</button>
          </p>
        </div>
      </div>
    {{/if}}
  </div>
</div>
