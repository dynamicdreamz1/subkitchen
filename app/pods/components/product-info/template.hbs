<div class="row">
  <div class="small-12 columns center image">
    <div class="row">
      <div class="small-12 columns">
        {{#link-to 'product' product.id}}
          {{lazy-image url=product.previewUrl}}
        {{/link-to}}
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns product-actions">
        <div class="row">
          <div class="small-12 columns sizes">
            <span> SIZES: </span>
            <form>
              <ul class="sizes">
                {{#each product.sizes as |s|}}
                <li>{{radio-button value=s model_id=product.id text=s execute=setSize chosen=size}}</li>
                {{/each}}
              </ul>
            </form>
          </div>
        </div>
        <div class="column row small-collapse buttons">
          <div class="small-6 columns">
            {{#link-to 'product' product.id class="black button uppercase"}}
              view
            {{/link-to}}
          </div>
          <div class="small-6 columns">
            <a onclick={{action "addToCart"}} class="primary button addToCart uppercase">ADD TO CART</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row column product-details collapse">
  <div class="small-12 columns">
    <div class="row collapse">
      <div class="small-9 columns uppercase font-bold ellipsis">
        {{#link-to 'product' product.id}}
          <div class="product-name">{{product.name}}</div>
        {{/link-to}}
      </div>
      <div class="small-3 columns text-right nowrap font-light likes" onclick={{action 'toggleLike'}}>
        {{product.likes_count}}
        {{#if product.likes_count}}
        <span class="icon-sub-liked">
          <span class="path1"></span><span class="path2"></span>
        </span>
        {{else}}
        <span class="icon-sub-unliked">
          <span class="path1"></span><span class="path2"></span>
        </span>
        {{/if}}
      </div>
    </div>
    <div class="row collapse">
      <div class="small-9 columns uppercase artist-name">
        by
        {{#if product.author.handle}}
          {{#link-to 'public-profile' [product.author.handle]}}
            {{product.author.name}}
          {{/link-to}}
        {{else}}
          {{product.author.name}}
        {{/if}}
      </div>
      <div class="small-3 columns text-right nowrap font-bold">
        {{format-number product.price style="currency" currency="USD" fallback=''}}
      </div>
    </div>
  </div>
</div>
