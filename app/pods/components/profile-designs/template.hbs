<div class="row profile-designs">
  <div class="small-12 columns">
    <h5 class="font-black">My Designs</h5>
    {{#each products as |product|}}
      <div class="row design collapse">
        <div class="small-2 columns">
          {{#link-to 'product' product.id}}
            <img src="{{product.product_image}}" alt="">
          {{/link-to}}
        </div>
        <div class="small-6 columns design-info">
          <p><b>{{product.name}}</b></p>
          <p>{{product.formattedTags}}</p>
        </div>
        <div class="small-3 columns published">
          <div class="row">
            <div class="small-6 columns publishedImage">
              <img src="assets/images/{{product.publishStatus}}.svg" alt="" data-tooltip aria-haspopup="true" class="has-tip top" data-disable-hover="false" title={{product.publishStatus}}>
            </div>
            <div class="small-6 columns">
              <a class="button light uppercase js-publish-button" onclick={{action 'showPublishingPopup' product.id}}>Edit</a>
            </div>
          </div>
        </div>
        <div class="reveal" id="editModal{{product.id}}" data-reveal data-close-on-click="true">
          <button class="close-button" data-close aria-label="Close modal" type="button">
            <span aria-hidden="true">&times;</span>
          </button>
          <div class="row white">
            <div class="small-12 columns">
              <div class="row">
                <div class="small-12 columns">
                  <h5 class="uppercase">design details</h5>
                </div>
              </div>
              <div class="row">
                <div class="small-12 columns">
                  <form novalidate {{action "publish" product.id on="submit"}}>
                    {{#if user.artist}}
                    <div class="row">
                      <div class="small-12 columns">
                        <label>Publish:</label>
                        {{#select-box/native on-select=(action 'updateIsPublished') as |sb|}}
                          {{sb.option value=true label='Yes'}}
                          {{sb.option value=false label='No'}}
                        {{/select-box/native}}
                      </div>
                    </div>
                    {{/if}}
                    <div class="row">
                      <div class="small-12 columns">
                        <label>Title:
                          {{input  type="text" name="title" autocomplete="off" value=productName placeholder="Puppy Monkey baby" aria-describedby="Product title" required=true}}
                        </label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="small-12 columns">
                        <label>Tags:
                          {{input  type="text" name="tags" autocomplete="off" value=joinedTags placeholder="Pug, Monkey, Baby, Space, Pink" aria-describedby="Product tags" required=true}}
                          <span class="hint">
                      Press Comma, or Spacebar to create a new tag. Backspace or Delete to remove the last one.
                    </span>
                        </label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="small-12 columns">
                        <label>Themes:</label>
                  <span class="hint">
                    Carefully select at least 1 theme (up to 4) to help other people find your products in the Shop.
                  </span>
                      </div>
                    </div>
                    {{#multiselect-checkboxes options=themes.themes selection=selectedThemes tagName='div' classNames='row collapse medium-up-4 themes' onchange=(action 'updateThemeSelection') as |theme isSelected|}}
                      <div class="column">
                        {{input type="checkbox" checked=isSelected id=(concat theme '-theme' product.id)}}
                        <label for="{{concat theme '-theme' product.id}}">
                          {{theme}}
                        </label>
                      </div>
                    {{/multiselect-checkboxes}}
                    <div class="row actions text-center">
                      <div class="small-12 columns">
                        <button class="button dark uppercase font-bold" type="submit" value="publish">save</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
    {{#if (gt products.meta.total_pages products.meta.current_page)}}
      <div class="row">
        <div class="small-12 columns text-center">
          <button class="button uppercase" onclick={{action 'loadMoreDesigns'}}>load more</button>
        </div>
      </div>
    {{/if}}
  </div>
</div>
