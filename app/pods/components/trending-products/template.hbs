<section class="trending-products">
  <div class="row title">
    <div class="small-12 columns uppercase">
      <strong>
        {{title}}
      </strong>
      //
      <a class="link-to-all" href="/products">view all</a>
    </div>
  </div>

  <div class="row">
    {{#each products as |product|}}
      {{product-info id=product.id title=product.name likes=product.likes price=product.price artist-name=product.author }}
    {{/each}}
  </div>
</section>
